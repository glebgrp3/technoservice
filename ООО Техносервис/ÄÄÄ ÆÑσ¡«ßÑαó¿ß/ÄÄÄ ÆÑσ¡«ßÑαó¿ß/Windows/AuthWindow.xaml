<Window x:Class="ООО_Техносервис.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ООО_Техносервис"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="415" MinHeight="300" MinWidth="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="120">
            <TextBlock Margin="0 50" HorizontalAlignment="Center" FontWeight="bold">ООО "Техносервис"</TextBlock>
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="loginText"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="passwordText"></PasswordBox>
            <Button Click="AuthBtn_Click" Margin="10">Войти</Button>
        </StackPanel>
    </Grid>
</Window>
